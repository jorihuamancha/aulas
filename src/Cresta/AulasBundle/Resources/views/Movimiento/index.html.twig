    <table class="records_list tabla">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Usuario</th>
                <th>Aula</th>
                <th>Fecha desde</th>
                <th>Fecha hasta</th>
                <th>Fecha de Movimiento</th>
                <th>Usuario</th>
                <th>Aula</th>
                <th>Hora desde</th>
                <th>Hora hasta</th>
                <th>Fecha de Reserva</th>

            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td>{{ entity.fecha }}</td>
                <td>{{ reservaEliminada.usuario }}</td>
                <td>{{ reservaEliminada.aula }}</td>
