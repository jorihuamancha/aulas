                <td>{{ reservaEliminada.fechaHasta |date('H:i:s') }}</td>                

                        <a href="{{ path('aulas_movimiento_show', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/ver.png') }}" class="icono" alt="Ver" /></a>                        
                        
                        
                </ul>
                </td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.movimientoPersona }}</td>
                <td>{{ entity.reservaAula }}</td>
                <td>{{ entity.reservaHoraDesde |date('H:i') }}</td>
                <td>{{ entity.reservaHoraHasta |date('H:i') }}</td>                       
                <td>{% if entity.reservaParaDiaDeReserva %}{{ entity.reservaParaDiaDeReserva|date('Y-m-d') }}{% endif %}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

