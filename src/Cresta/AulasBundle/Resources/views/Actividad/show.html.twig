{% extends '::base.html.twig' %}

{% block body -%}     
        
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Actividad</h3>
            </div>
            <div class="panel-body">
                <table class="record_properties tabla verItem">
                    <tbody>
                        <tr>
                            <th>Tipo</th>
                            <td>{{ entity.tipo }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ entity.nombre }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul class="record_actions tablaAcciones">
                    <a class="btn btn-default botonTabla" href="{{ path('aulas_actividad') }}">
                        Volver a la lista
                    </a>

                    <a class="btn btn-default botonTabla" href="{{ path('aulas_actividad_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                </ul>
            </div>
        </div>
{% endblock %}
