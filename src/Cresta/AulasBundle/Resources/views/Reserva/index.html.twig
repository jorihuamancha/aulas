{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reserva list</h1>

    <table class="records_list">
        <thead>
            <tr>                
            <tr>                
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Estado</th>
                <th>Observaciones</th>
                <th>Fecharegistro</th>
                <th>Horadesde</th>
                <th>Horahasta</th>
                <th>Fechareserva</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('aulas_reserva_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>{% if entity.fechaRegistro %}{{ entity.fechaRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.horaDesde }}</td>
                <td>{{ entity.horaHasta }}</td>
                <td>{% if entity.fechaReserva %}{{ entity.fechaReserva|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                        <a href="{{ path('aulas_reserva_show', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/ver.png') }}" class="icono" alt="Ver" /></a>
                    
                        <a href="{{ path('aulas_reserva_edit', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/editar.png') }}" class="icono" alt="Editar" /></a>

                        <a href="{{ path('aulas_reserva_delete', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/borrar.png') }}" class="icono" alt="Borrar" /></a>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('aulas_reserva_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
