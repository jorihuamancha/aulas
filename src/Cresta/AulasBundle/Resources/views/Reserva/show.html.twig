{% extends '::base.html.twig' %}
{% block title %}Ver reserva {% endblock %}
{% block body -%}
    <h1>Reserva</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.observaciones }}</td>
            </tr>
            <tr>
                <th>Fecharegistro</th>
                <td>{{ entity.fechaRegistro|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Horadesde</th>
                <td>{{ entity.horaDesde }}</td>
            </tr>
            <tr>
                <th>Horahasta</th>
                <td>{{ entity.horaHasta }}</td>
            </tr>
            <tr>
                <th>Fechareserva</th>
                <td>{{ entity.fechaReserva|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

     <ul class="record_actions tablaAcciones">
                    <a class="btn btn-default botonTabla" href="{{ path('aulas_reserva_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                    
                    <a class="btn btn-default botonTabla" href="{{ path('aulas_reserva') }}">
                        Volver a la lista
                    </a>
        </ul>
{% endblock %}
