{% extends '::base.html.twig' %}
{% block title %}Feriado {% endblock %}
{% block body -%}
    <h1>Listado de feriados</h1>
    <ul>
            <a href="{{ path('aulas_alerta_new') }}" class="btn btn-default botonTabla">
                Nuevo feriado
            </a>
    </ul>
    <table class="records_list tabla">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Descripción</th>
                <th>Observaciones</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.fecha %}{{ entity.fecha|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.descripcion }}</td>

                {% if entity.observaciones is null %}
                    <td>N/A</td>
                {% else %}
                    <td>{{ entity.observaciones }}</td>
                {% endif %}
                <td>
                <ul>
                    
                        <a href="{{ path('aulas_alerta_show', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/ver.png') }}" class="icono" alt="Ver" /></a>
                    
                    
                        <a href="{{ path('aulas_alerta_edit', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/editar.png') }}" class="icono" alt="Editar" /></a>

                        <a href="{{ path('aulas_alerta_delete', { 'id': entity.id }) }}"><img src="{{ asset('img/iconos/borrar.png') }}" class="icono" onclick="return confirmar()" alt="Borrar" /></a>
                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>

      function confirmar(){
        if (confirm("¿Realmente desea realizar esta accion?") == true) {
            return true;
        }else{
          return false;
        }
      }
    
    </script>
    {% endblock %}
