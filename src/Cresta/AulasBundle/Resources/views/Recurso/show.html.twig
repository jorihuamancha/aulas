{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Recurso</h1>

    <table class="record_properties tabla">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>
                {% if entity.activo==1 %}
                    SI
                {% else %}
                    NO
                {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('aulas_recurso') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('aulas_recurso_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
